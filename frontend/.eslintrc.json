{
  "root": true,
  "extends": ["next", "next/core-web-vitals"],
  // ✅ plugins 삭제 (react-hooks는 next config에 이미 포함)
  "rules": {
    "react/jsx-key": "warn", // JSX 반복 시 key 경고
    "react/react-in-jsx-scope": "off", // ✅ React 17 이상일 경우 불필요
    "react-hooks/rules-of-hooks": "error", // ✅ 훅스 사용 규칙 강제
    "react-hooks/exhaustive-deps": "warn" // ✅ 의존성 누락 경고
  }
}
